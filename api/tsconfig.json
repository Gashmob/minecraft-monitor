{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "lib": ["ES2022"],
    "strict": true,
    "skipLibCheck": true,
    "importHelpers": true,
    "exactOptionalPropertyTypes": true,
    "isolatedModules": true,
    "noImplicitOverride": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "incremental": true
  },
  "include": ["src/**/*"]
}
